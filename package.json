{
  "name": "topx-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod-dev": "cross-env NODE_ENV=development node dist/main",
    "start:prod": "cross-env NODE_ENV=production CUSTOM_ENV=production node dist/main --max-old-space-size=4096 --max-semi-space-size=256",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build:prod": "docker build --platform linux/amd64 -t us-central1-docker.pkg.dev/empowerit-top/empowerit-api/empowerit-api .",
    "push:prod": "docker push us-central1-docker.pkg.dev/empowerit-top/empowerit-api/empowerit-api && gcloud beta run deploy empowerit-api --image us-central1-docker.pkg.dev/empowerit-top/empowerit-api/empowerit-api:latest --region us-central1 --project empowerit-top"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.425.0",
    "@aws-sdk/s3-request-presigner": "^3.425.0",
    "@google-cloud/tasks": "^4.0.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/serve-static": "^4.0.0",
    "@sentry/node": "^7.64.0",
    "@sentry/tracing": "^7.64.0",
    "@shopify/graphql-client": "^0.10.3",
    "@types/nodemailer": "^6.4.9",
    "axios": "^1.8.4",
    "class-validator": "^0.14.1",
    "country-state-city": "^3.2.0",
    "dayjs": "^1.11.9",
    "exceljs": "^4.4.0",
    "firebase": "^10.1.0",
    "firebase-admin": "^11.10.1",
    "multer": "^1.4.5-lts.1",
    "neo4j-driver": "^5.18.0",
    "nodemailer": "^6.9.4",
    "nodemailer-gmail": "^3.0.0",
    "openpay": "^1.0.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.2",
    "xrpl-tagged-address-codec": "^1.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/openpay": "^1.0.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
